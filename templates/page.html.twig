{% extends 'base.html.twig' %}

{% block title %}Camille Puverel - {{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('page') }}
{% endblock %}

{% block header %}
    <a id="nav-tree" class="" href="{{ path('home') }}">
        {{ include('home/nav-tree.html') }}
    </a>
    <h1>{{ title }}</h1>
    {% set currentPath = app.request.pathInfo %}
    <nav>
        <ul>
        {% for menuItem in menu.menuItems %}
            <li>
                <a
                    class="navLink{% if currentPath == path(menuItem.path) %} current{% endif %}"
                    href="{{ path(menuItem.path) }}">{{ menuItem.name }}</a>
            </li>
        {% endfor %}
        </ul>
    </nav>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page') }}
{% endblock %}
