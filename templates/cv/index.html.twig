{% extends 'page.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('cv') }}
{% endblock %}

{% block body %}
<main>
    <div class="container">
        <section class="cvSection cvSkills">
            <div class="row">
                <div class="col-12">
                    <h2>Skills</h2>
                </div>
                {% for skill in skills %}
                    <div class="col-12">
                        <article class="cvItem cvSkill">
                            <h3><span>{{ skill.title }}</span></h3>
                            <ul>
                            {% for item in skill.items %}
                                <li>
                                    <h4>{{ item.title }}</h4>
                                    {% if item.description is iterable %}
                                        <ul>
                                        {% for descItem in item.description %}
                                            <li>
                                                <span class="smallTitle">{{ descItem.title }} :</span> {{ descItem.description }}
                                            </li>
                                        {% endfor %}
                                        </ul>
                                    {% else %}
                                        <p>{{ item.description }}</p>
                                    {% endif %}
                                </li>
                            {% endfor %}
                            </ul>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </section>
        <section class="cvSection cvCursus">
            <div class="row">
                <div class="col-12">
                    <h2>Cursus</h2>
                </div>
                {% for item in cursus %}
                    <div class="col-12">
                        <article class="cvItem cvCursusItem">
                            <div class="row">
                                <div class="col-12">
                                    <h3><span>{{ item.title }}</span></h3>
                                </div>
                                <div class="col-12">
                                    <div class="date">{{ item.date }}</div>
                                </div>
                                <div class="col-12">
                                    <div class="description">{{ item.description }}</div>
                                </div>
                                <div class="col-12">
                                    <div class="place">
                                        {{ item.place }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="referent">
                                        <ul>
                                        {% for person in item.persons %}
                                            <li>
                                                {{ person }}
                                            </li>
                                        {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
</main>
{% endblock %}
