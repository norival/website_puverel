{% extends 'page.html.twig' %}

{% block body %}
<main>
    <div class="container">
        {% for content in contents %}
            <section class="section">
                <h2>{{ content.title }}</h2>
                <div class="content">
                    {{ content.description }}
                </div>
                <ul class="linkList ressources mt-4">
                    {% for ressource in content.ressources %}
                        <li>
                            {% if ressource.type == "file" %}
                                <a
                                    target="_blank" rel="noopener noreferrer"
                                    class="button"
                                    href="{{ asset('build/documents/' ~ ressource.path) }}"
                                    title="{{ ressource.description }}"
                                    alt="{{ ressource.description }}">
                                    {{ ressource.title }}
                                </a>
                            {% elseif ressource.type == "page" %}
                                <a
                                    class="button"
                                    href="{{ path(ressource.path, ressource.params) }}"
                                    title="{{ ressource.description }}"
                                    alt="{{ ressource.description }}">
                                    {{ ressource.title }}
                                </a>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </section>
        {% endfor %}
    </div>
</main>
{% endblock %}
